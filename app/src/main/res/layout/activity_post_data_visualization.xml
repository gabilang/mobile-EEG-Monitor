<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:weightSum="12.0">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="Visualization Modes"
        android:textStyle="bold"
        android:textColor="@color/appDefault"
        android:textSize="25sp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:src="@drawable/epilepsy"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/time_domain"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Time Domain EEG Data"
        android:textColor="@color/textDefault"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:enabled="true"
        android:background = "@drawable/rounded_button" />




    <Button
        android:id="@+id/aeeg"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="aEEG"
        android:textColor="@color/textDefault"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background = "@drawable/rounded_button" />

    <Button
        android:id="@+id/spectrogram"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:text="Spectrogram"
        android:textColor="@color/textDefault"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background = "@drawable/rounded_button" />

</LinearLayout>